@page "/counter"


<h1>Counter</h1>

<p>Current count: @currentCount</p>
<p>Increment amount cascading: @IncrementAmount2</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>
<button class="btn btn-primary" @onclick="ChangeIncrement">Click me</button>



@code {
    private int currentCount = 0;
    [Parameter]
    public int IncrementAmount { get; set; } = 1;
    [Parameter] public EventCallback<int> IncrementAmountChanged { get; set; }
    [CascadingParameter] public int IncrementAmount2 { get; set; }

    private void IncrementCount()
    {
        currentCount+= IncrementAmount;
    }
    private void ChangeIncrement()
    {
        IncrementAmount++;
        IncrementAmountChanged.InvokeAsync(IncrementAmount);
    }
}
